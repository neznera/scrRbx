--[[
    ⚠️ DANGER ZONE ⚠️
    Этот скрипт 100% приведёт к бану аккаунта в публичных серверах.
    Используй ТОЛЬКО на альт-аккаунтах и ТОЛЬКО с Krnl/Synapse.
    Автор не несёт ответственности. Ты предупреждён.
]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

-- ===== НАСТРОЙКИ =====
local Settings = {
    FlingSpeed = 1000,        -- Скорость вращения
    FlingPower = 10000,       -- Сила выброса
}

-- ===== ПЕРЕМЕННЫЕ =====
local flingEnabled = false
local flingConnection = nil
local flingPart = nil
local spinBV = nil
local spinBAV = nil

-- ===== СОЗДАНИЕ ФЛИНГ-ОБЪЕКТА =====
local function CreateFlingPart()
    local char = LocalPlayer.Character
    if not char then return nil end
    local root = char:FindFirstChild("HumanoidRootPart") or char:FindFirstChild("Torso")
    if not root then return nil end
    
    -- Создаём невидимую часть
    local part = Instance.new("Part")
    part.Name = "FlingPart_" .. math.random(9999)
    part.Size = Vector3.new(2, 2, 2)
    part.Anchored = false
    part.CanCollide = true
    part.Transparency = 1
    part.CFrame = root.CFrame * CFrame.new(0, 0, 2)
    part.Parent = workspace
    
    -- Привариваем к персонажу
    local weld = Instance.new("WeldConstraint")
    weld.Part0 = part
    weld.Part1 = root
    weld.Parent = part
    
    return part
end

-- ===== ВКЛЮЧЕНИЕ ФЛИНГА =====
local function EnableFling()
    if flingEnabled then return end
    
    local char = LocalPlayer.Character
    if not char then return end
    local root = char:FindFirstChild("HumanoidRootPart") or char:FindFirstChild("Torso")
    if not root then return end
    
    -- Создаём флинг-часть
    flingPart = CreateFlingPart()
    if not flingPart then return end
    
    -- Вращение (крутимся)
    spinBAV = Instance.new("BodyAngularVelocity")
    spinBAV.MaxTorque = Vector3.new(9000, 9000, 9000)
    spinBAV.AngularVelocity = Vector3.new(0, Settings.FlingSpeed, 0)
    spinBAV.P = 10000
    spinBAV.Parent = flingPart
    
    -- Импульс для выброса
    spinBV = Instance.new("BodyVelocity")
    spinBV.MaxForce = Vector3.new(9000, 9000, 9000)
    spinBV.Velocity = Vector3.new(0, 50, 0)
    spinBV.Parent = flingPart
    
    flingEnabled = true
end

-- ===== ВЫКЛЮЧЕНИЕ ФЛИНГА =====
local function DisableFling()
    flingEnabled = false
    if spinBAV then spinBAV:Destroy() spinBAV = nil end
    if spinBV then spinBV:Destroy() spinBV = nil end
    if flingPart then flingPart:Destroy() flingPart = nil end
end

-- ===== УПРАВЛЕНИЕ =====
UserInputService.InputBegan:Connect(function(input, gp)
    if gp then return end
    if input.KeyCode == Enum.KeyCode.A then  -- Нажми "A" для флинга
        if flingEnabled then
            DisableFling()
        else
            EnableFling()
        end
    end
end)

-- Отключаем при респавне
LocalPlayer.CharacterAdded:Connect(function()
    if flingEnabled then DisableFling() end
end)

print("⚠️ ФЛИНГ-СКРИПТ АКТИВИРОВАН. Нажми A для включения/выключения.")
print("⚠️ Твой аккаунт будет забанен. Используй альт.")

yPos = yPos + 50
CreateSlider(MainFrame, "Rapid Fire Delay", 0, function() return Settings.RapidFireDelay end, function(v) Settings.RapidFireDelay = v end, 0.01, 0.2, "%.2fs", false)
yPos = yPos + 50
CreateSlider(MainFrame, "Bullet Speed", 0, function() return Settings.FastBullets_Multiplier end, function(v) Settings.FastBullets_Multiplier = v end, 2, 20, "%.0fx", true)
yPos = yPos + 50
CreateSlider(MainFrame, "WalkSpeed", 0, function() return Settings.WalkSpeed end, function(v) Settings.WalkSpeed = v; UpdateWalkSpeed() end, 16, 100, "%.0f", true)
yPos = yPos + 50


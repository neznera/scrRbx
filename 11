-- ========== Ğ¤Ğ£ĞĞšĞ¦Ğ˜Ğ˜ ==========
function ScanRemotes()
    RemoteList = {}
    local services = {
        game:GetService("ReplicatedStorage"),
        game:GetService("ServerStorage"),
        game:GetService("ServerScriptService"),
        game:GetService("Workspace"),
        game:GetService("Players"),
        game,
        CoreGui
    }
    
    -- Ğ¡ĞºÑ€Ñ‹Ñ‚Ñ‹Ğµ Ğ¾Ğ±ÑŠĞµĞºÑ‚Ñ‹
    local hidden = getnilinstances()
    for _, obj in pairs(hidden) do
        if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
            table.insert(RemoteList, obj)
        end
    end
    
    for _, service in ipairs(services) do
        for _, obj in pairs(service:GetDescendants()) do
            if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
                table.insert(RemoteList, obj)
            end
        end
    end
    
    print("âœ… ĞĞ°Ğ¹Ğ´ĞµĞ½Ğ¾ Remote'Ğ¾Ğ²: " .. #RemoteList)
    if #RemoteList > 0 then
        SelectedIndex = 1
        UpdateDisplay()
    else
        InfoLabel.Text = "Remote'Ñ‹ Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ñ‹ (ÑÑ‚Ñ€Ğ°Ğ½Ğ½Ğ¾)"
    end
end

function UpdateDisplay()
    if #RemoteList > 0 then
        local r = RemoteList[SelectedIndex]
        InfoLabel.Text = string.format("Selected [%d/%d]: %s (%s)\nĞŸÑƒÑ‚ÑŒ: %s",
            SelectedIndex, #RemoteList, r.Name, r.ClassName, r:GetFullName())
    else
        InfoLabel.Text = "Selected: none (Ğ½Ğ°Ğ¶Ğ¼Ğ¸ SCAN)"
    end
end

function ParseArgs(str)
    if str == "" then return {} end
    local func, err = load("return " .. str)
    if not func then
        AddLog("âŒ ĞÑˆĞ¸Ğ±ĞºĞ° Ğ² Ğ°Ñ€Ğ³ÑƒĞ¼ĞµĞ½Ñ‚Ğ°Ñ…: " .. err)
        return nil
    end
    local success, result = pcall(func)
    if success then
        if type(result) ~= "table" then
            result = {result}
        end
        return result
    else
        AddLog("âŒ ĞÑˆĞ¸Ğ±ĞºĞ° Ğ²Ñ‹Ğ¿Ğ¾Ğ»Ğ½ĞµĞ½Ğ¸Ñ: " .. tostring(result))
        return nil
    end
end

function AddLog(text)
    table.insert(Logs, text)
    if #Logs > 10 then table.remove(Logs, 1) end
    
    -- ĞĞ±Ğ½Ğ¾Ğ²Ğ»ÑĞµĞ¼ ÑĞ¿Ğ¸ÑĞ¾Ğº Ğ² GUI
    for _, v in pairs(LogList:GetChildren()) do
        if v:IsA("TextLabel") then v:Destroy() end
    end
    
    local y = 0
    for i = #Logs, 1, -1 do
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(1, -10, 0, 20)
        label.Position = UDim2.new(0, 5, 0, y)
        label.BackgroundTransparency = 1
        label.Text = Logs[i]
        label.TextColor3 = Color3.new(0.9, 0.9, 0.9)
        label.Font = Enum.Font.SourceSans
        label.TextSize = 14
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = LogList
        y = y + 20
    end
    LogList.CanvasSize = UDim2.new(0, 0, 0, y + 10)
end

function FireSelected()
    if #RemoteList == 0 then
        AddLog("âŒ Ğ¡Ğ½Ğ°Ñ‡Ğ°Ğ»Ğ° Ğ½Ğ°Ğ¶Ğ¼Ğ¸ SCAN")
        return
    end
    
    local remote = RemoteList[SelectedIndex]
    local args = ParseArgs(ArgsBox.Text)
    if args == nil then return end
    
    AddLog("ğŸ”¥ Ğ’Ñ‹Ğ·Ğ¾Ğ² " .. remote.Name .. " Ñ Ğ°Ñ€Ğ³ÑƒĞ¼ĞµĞ½Ñ‚Ğ°Ğ¼Ğ¸: " .. ArgsBox.Text)
    
    local success, result = pcall(function()
        if remote:IsA("RemoteEvent") then
            remote:FireServer(unpack(args))
            return "OK (Ğ½ĞµÑ‚ Ğ¾Ñ‚Ğ²ĞµÑ‚Ğ°)"
        elseif remote:IsA("RemoteFunction") then
            return remote:InvokeServer(unpack(args))
        end
    end)
    
    if success then
        AddLog("âœ… Ğ£ÑĞ¿ĞµÑˆĞ½Ğ¾")
        if result and result ~= "OK (Ğ½ĞµÑ‚ Ğ¾Ñ‚Ğ²ĞµÑ‚Ğ°)" then
            local resultStr = tostring(result)
            if #resultStr > 50 then resultStr = resultStr:sub(1,50) .. "â€¦" end
            AddLog("ğŸ“¦ ĞÑ‚Ğ²ĞµÑ‚: " .. resultStr)
        end
    else
        AddLog("âŒ ĞÑˆĞ¸Ğ±ĞºĞ°: " .. tostring(result))
    end
end

-- Ğ˜Ğ½Ğ¸Ñ†Ğ¸Ğ°Ğ»Ğ¸Ğ·Ğ°Ñ†Ğ¸Ñ
ScanRemotes()
print("âœ… Remote Explorer Ğ·Ğ°Ğ³Ñ€ÑƒĞ¶ĞµĞ½. ĞĞºĞ½Ğ¾ Ğ´Ğ¾Ğ»Ğ¶Ğ½Ğ¾ Ğ±Ñ‹Ñ‚ÑŒ Ğ²Ğ¸Ğ´Ğ½Ğ¾.")

-- –¢–µ—Å—Ç–∏—Ä—É–µ–º ReplicatedStorage.Events.ItemUseCommand (RemoteEvent)
local itemUse = game:GetService("ReplicatedStorage").Events.ItemUseCommand
if itemUse then
    print("üîç –¢–µ—Å—Ç–∏—Ä—É–µ–º ItemUseCommand")
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 1: —Å–ª–æ—Ç –ø—á–µ–ª—ã –∏ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ (–ø—Ä–µ–¥–ø–æ–ª–æ–∂–∏–º, treat –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é)
    local success, err = pcall(function() itemUse:FireServer(1, 1000000) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1, 1000000):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 2: —Å–ª–æ—Ç, ID –ø—Ä–µ–¥–º–µ—Ç–∞ ("Treat"), –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ
    success, err = pcall(function() itemUse:FireServer(1, "Treat", 1000000) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1, 'Treat', 1000000):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 3: ID –ø—Ä–µ–¥–º–µ—Ç–∞, —Å–ª–æ—Ç, –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ
    success, err = pcall(function() itemUse:FireServer("Treat", 1, 1000000) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç ('Treat', 1, 1000000):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 4: —Ç–æ–ª—å–∫–æ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ (–º–æ–∂–µ—Ç, –ø—Ä–µ–¥–º–µ—Ç —É–∂–µ –≤—ã–±—Ä–∞–Ω)
    success, err = pcall(function() itemUse:FireServer(1000000) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1000000):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
else
    print("‚ùå ItemUseCommand –Ω–µ –Ω–∞–π–¥–µ–Ω")
end

-- –¢–µ—Å—Ç–∏—Ä—É–µ–º ReplicatedStorage.Events.BeeLevelUp (RemoteEvent)
local beeLevel = game:GetService("ReplicatedStorage").Events.BeeLevelUp
if beeLevel then
    print("\nüîç –¢–µ—Å—Ç–∏—Ä—É–µ–º BeeLevelUp")
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 1: —Å–ª–æ—Ç, –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ
    local success, err = pcall(function() beeLevel:FireServer(1, 1000000) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1, 1000000):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 2: —Å–ª–æ—Ç, –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ, —Ç–∏–ø (–º–æ–∂–µ—Ç –±—ã—Ç—å "Treat")
    success, err = pcall(function() beeLevel:FireServer(1, 1000000, "Treat") end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1, 1000000, 'Treat'):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 3: —Ç–æ–ª—å–∫–æ —Å–ª–æ—Ç (–≤–æ–∑–º–æ–∂–Ω–æ, –∏—Å–ø–æ–ª—å–∑—É–µ—Ç –≤—Å–µ treats)
    success, err = pcall(function() beeLevel:FireServer(1) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
    
    -- –í–∞—Ä–∏–∞–Ω—Ç 4: —Å–ª–æ—Ç, –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ, —á—Ç–æ-—Ç–æ –µ—â—ë (–Ω–∞–ø—Ä–∏–º–µ—Ä, 2 –∫–∞–∫ –≤ GetBondToLevel)
    success, err = pcall(function() beeLevel:FireServer(1, 1000000, 2) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1, 1000000, 2):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
else
    print("‚ùå BeeLevelUp –Ω–µ –Ω–∞–π–¥–µ–Ω")
end

-- –¢–µ—Å—Ç–∏—Ä—É–µ–º PlayerPurchase (–Ω–∞ –≤—Å—è–∫–∏–π —Å–ª—É—á–∞–π)
local purchase = game:GetService("ReplicatedStorage").Events.PlayerPurchase
if purchase then
    print("\nüîç –¢–µ—Å—Ç–∏—Ä—É–µ–º PlayerPurchase")
    local success, err = pcall(function() purchase:FireServer("Treat", 1000000) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç ('Treat', 1000000):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
    success, err = pcall(function() purchase:FireServer(1, 1000000) end)
    print("  –í–∞—Ä–∏–∞–Ω—Ç (1, 1000000):", success and "OK" or "–û—à–∏–±–∫–∞: " .. tostring(err))
end

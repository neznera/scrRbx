--[[
    ТЕЛЕПОРТ ПО ПРЯМОМУ ПУТИ (Workspace.Particles.Snowflakes.SnowflakePart)
    - Нажми T, чтобы переместиться на объект по указанному пути.
]]

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
Local LocalPlayer = Players.LocalPlayer

-- НАСТРОЙКИ
local TELEPORT_KEY = Enum.KeyCode.T
-- Указываем полный путь к цели (можно менять)
local TARGET_PATH = workspace.Particles.Snowflakes.SnowflakePart

local function TeleportToTarget()
    local char = LocalPlayer.Character
    if not char then return end
    local root = char:FindFirstChild("HumanoidRootPart") or char:FindFirstChild("Torso")
    if not root then return end

    -- Проверяем, существует ли объект по указанному пути
    if TARGET_PATH and TARGET_PATH:IsA("BasePart") then
        -- Телепортируемся прямо в центр объекта
        root.CFrame = CFrame.new(TARGET_PATH.Position)
        print("✅ Телепорт на", TARGET_PATH:GetFullName())
    else
        print("❌ Объект по пути не найден или это не BasePart.")
    end
end

UserInputService.InputBegan:Connect(function(input, gp)
    if gp then return end
    if input.KeyCode == TELEPORT_KEY then
        TeleportToTarget()
    end
end)

print("✅ Скрипт готов. Нажми T для телепорта на", TARGET_PATH:GetFullName())

--[[
    АВТОМАТИЧЕСКАЯ ТЕЛЕПОРТАЦИЯ НА ТОКЕНЫ "C"
    - Ищет все объекты с именем "C" и прозрачностью 0.
    - Мгновенно перемещает персонажа в центр ближайшего.
    - Работает непрерывно.
]]

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Имя цели (как в выводе)
local TARGET_NAME = "C"

-- Функция проверки, активен ли токен (прозрачность 0)
local function isActive(obj)
    return obj:IsA("BasePart") and obj.Name == TARGET_NAME and obj.Transparency == 0
end

-- Основной цикл
while true do
    local char = LocalPlayer.Character
    if char then
        local root = char:FindFirstChild("HumanoidRootPart") or char:FindFirstChild("Torso")
        if root then
            local myPos = root.Position
            local closest = nil
            local closestDist = math.huge

            -- Перебираем всё, что есть в workspace
            for _, obj in pairs(workspace:GetDescendants()) do
                if isActive(obj) then
                    local dist = (obj.Position - myPos).Magnitude
                    if dist < closestDist then
                        closestDist = dist
                        closest = obj
                    end
                end
            end

            if closest then
                -- Мгновенная телепортация прямо в центр токена
                root.CFrame = CFrame.new(closest.Position)
            end
        end
    end
    -- Небольшая пауза, чтобы не нагружать процессор (можно уменьшить до 0.01)
    task.wait(0.03)
end

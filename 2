--[[
    БЫСТРАЯ ТЕЛЕПОРТАЦИЯ НА СНЕЖИНКУ (Snowflake)
    Инструкция:
    1. Запустите скрипт.
    2. Нажмите клавишу "T" для телепортации к ближайшей снежинке.
    3. Скрипт будет искать снежинки в радиусе 1000 блоков.
]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local LocalPlayer = Players.LocalPlayer

-- Настройки
local TELEPORT_KEY = Enum.KeyCode.T  -- Клавиша для телепорта
local SEARCH_RADIUS = 1000            -- Радиус поиска снежинок

-- Функция для телепортации
local function TeleportToSnowflake()
    local character = LocalPlayer.Character
    if not character then return end

    local rootPart = character:FindFirstChild("HumanoidRootPart") or character:FindFirstChild("Torso")
    if not rootPart then return end

    -- Поиск всех объектов с именем "Snowflake" в игровом мире
    local snowflakes = workspace:FindFirstChild("Snowflakes") or workspace:GetDescendants() -- Адаптируйте под структуру игры
    local target = nil
    local closestDist = SEARCH_RADIUS

    -- Перебираем объекты в поисках снежинки
    for _, obj in pairs(snowflakes) do
        if obj.Name:lower():find("snowflake") and obj:IsA("BasePart") then
            local dist = (obj.Position - rootPart.Position).Magnitude
            if dist < closestDist then
                closestDist = dist
                target = obj
            end
        end
    end

    if target then
        -- Мгновенная телепортация (без задержки)
        rootPart.CFrame = CFrame.new(target.Position + Vector3.new(0, 5, 0))  -- Поднимаем на 5 блоков выше
        print("✅ Телепорт на снежинку!")
    else
        print("❌ Снежинка не найдена.")
    end
end

-- Назначаем клавишу для телепортации
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == TELEPORT_KEY then
        TeleportToSnowflake()
    end
end)

print("✅ Скрипт телепортации загружен. Нажмите T для прыжка на снежинку.")
